{
  "name": "project",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "dependencies": {
    "husky": "^4.3.0",
    "lint-staged": "^10.3.0"
  },
  "scripts": {
    "prettier:server": "npm run format --prefix server/",
    "lint:server": "npm run lint --prefix server"
  },
  "lint-staged": {
    "server/src/**/*.ts": [
      "npm run --silent prettier:server"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  }
}
